{% extends 'base.html.twig' %}

{% block title %}Gerer les l'option{% endblock %}

{% block body %}

    <div class="container mt-4">
    {% for message in app.flashes('notice') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
        <h2 class="float-left">Gerer les l'option</h2>
        <a class="btn btn-primary float-right" href="{{ path('admin_option_create') }}">Create Option</a>
        <table class="table table-striped" >
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
            {% for option in options %}
                <tr>
                    <td>{{ option.name }}</td>
                    <td>
                       <a href="{{ path('admin_option_edit', {id: option.id}) }}"  class="btn btn-secondary">Editer</a> 
                       <a href="" class="btn btn-danger dlt-option" data-opid="{{ option.id }}">Supprimer</a>
                    </td>      
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock %}
{% block javascripts %}
<script src="../js/deleteOption.js"></script>
{% endblock %}